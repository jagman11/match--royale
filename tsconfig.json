{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",  // Ensure baseUrl is set to the project root
    "paths": {
      "@/*": ["app/*"]  // Make sure alias maps to the 'app' folder correctly
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "expo-router.d.ts"
  ]
}
